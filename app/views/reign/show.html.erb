<h1>
	<% if @reign.monarchs.size == 1 %>
		<%= link_to( @reign.monarchs.first.name, monarch_show_url( :monarch => @reign.monarchs.first ) ) %> monarch of the <%= link_to(@reign.kingdom.name, kingdom_show_url( :kingdom => @reign.kingdom_id ) ) %>
	<% else -%>
		<%= link_to( @reign.monarchs.first.name, monarch_show_url( :monarch => @reign.monarchs.first ) ) %> and <%= link_to( @reign.monarchs.last.name, monarch_show_url( :monarch => @reign.monarchs.last ) ) %> monarchs of the <%= link_to(@reign.kingdom.name, kingdom_show_url( :kingdom => @reign.kingdom_id ) ) %>
	<% end -%>
</h1>
<%= content_tag( 'p', "#{@reign.date_range}." ) %>

<%= content_tag( 'h2', 'Letters Patent' ) %>
<%= content_tag( 'p', link_to( 'Download tab separated', reign_show_url( :format => 'tsv' ) ) ) %>
<table>
	<%= render :partial => 'letters_patent/table_header' %>
	<tbody>
		<%= render :partial => 'letters_patent/letters_patent_table', :collection => @letters_patent %>
</table>