<%= content_tag( 'h1', "Announcement on #{@announcement.announced_on.strftime( '%-d %B %Y')}" ) %>

<%= content_tag( 'p', "As part of a #{link_to( @announcement.announcement_type.name, announcement_type_show_url( :announcement_type => @announcement.announcement_type ) )}.".html_safe ) %>

<%= content_tag( 'p', "Announced during the #{link_to( @announcement.administration.prime_minister_reverse_ordinally, administration_show_url( :administration => @announcement.administration ) )}.".html_safe ) if @announcement.administration %>

<% if @announcement.in_gazette -%>
	<%= content_tag( 'p', "Published in the London Gazette." ) %>
<% else -%>
	<%= content_tag( 'p', "Not published in the London Gazette." ) %>
<% end -%>
<%= content_tag( 'p', @announcement.notes )if @announcement.notes %>

<%= content_tag( 'h2', 'Letters Patent' ) %>
<%= content_tag( 'p', link_to( 'Download tab separated', announcement_show_url( :format => 'tsv' ) ) ) %>
<table>
	<%= render :partial => 'letters_patent/table_header' %>
	<tbody>
		<%= render :partial => 'letters_patent/letters_patent_table', :collection => @letters_patent %>
	</tbody>
</table>


